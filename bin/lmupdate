# autoload
check_upadate(){
    PWD=$(pwd)
    echo -e  "\033[0;32m Checking for updates in lmstack.\033[0m"
    echo -e ""
    echo -e "  ðŸ’»  Update lmtmux  ðŸ’»  "
    echo -e ""
    cd ~/.config/lmtmux/
    echo -e "\033[0;32m  $(git pull)\033[0m"
    echo -e ""
    echo -e ""
    echo -e "  ðŸ’²  Update lmzsh  ðŸ’²  "
    echo -e ""
    cd ~/.config/lmzsh/
    echo -e "\033[0;32m  $(git pull)\033[0m"
    source ~/.zshrc
    echo -e ""
    echo -e ""
    echo -e "  ðŸ“‚  Update nvim  ðŸ“‚  "
    echo -e ""
    cd ~/.config/nvim/
    echo -e "\033[0;32m  $(git pull)\033[0m"
    nvim -c 'PlugInstall' -c 'qa!'
    nvim -c 'UpdateRemovePlugin' -c 'qa!'
    echo -e ""
    echo -e ""
    cd $PWD
}
check_upadate
